<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/amber_50"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/Button.Green"
            android:background="@color/green_400"
            android:id="@+id/record"
            android:layout_marginBottom="@dimen/_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_24sp"
            android:padding="@dimen/_24dp"
            android:text="@string/record_start"
            android:textAppearance="@style/TextAppearance.Medium.Bold"
            android:textColor="@color/green_50" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/Button.Green"
            android:background="@color/blue_200"
            android:id="@+id/downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sp"
            android:padding="@dimen/_24dp"
            android:text="@string/open_downloads"
            android:textAppearance="@style/TextAppearance.Medium.Bold"
            android:textColor="@color/green_50" />

        <TextView
            android:id="@+id/tip_t"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sp"
            android:padding="@dimen/_24dp"
            android:text="@string/tips"
            android:textAppearance="@style/TextAppearance.Medium.Bold"
            android:textColor="@color/grey_40" />

        <TextView
            android:id="@+id/tip"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sp"
            android:text="@string/permissions_and_working"
            android:textAppearance="@style/TextAppearance.Medium.Bold"
            android:textColor="@color/grey_40" />

    </LinearLayout>

</layout>